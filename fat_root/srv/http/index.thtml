<!DOCTYPE html>
<html>
  <head>
    [/{include,file=include/resources.html}/]
    <title>[/{title}/]</title>
  </head>
  <body>
    <iframe name="dummyframe" width="0" height="0" border="0" style="display: none;"></iframe>
    <div class="fixed-top sticky-top">
      <div class="container">
        <span class="badge badge-info"> Text display goes here</span>
      </div>
    </div>
    <div class="container">
      <form method="get" action="/api/set_text" target="dummyframe">
        <div class="form-group">
          <input type="text" id="text" name="text" value="[/{badge.text}/]" class="form-control">
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Set text</button>
        </div>
      </form>
    </div>
  </body>
</html>
